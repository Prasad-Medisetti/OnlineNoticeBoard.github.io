    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://kit-pro.fontawesome.com/releases/v5.13.0/css/pro.min.css">
  </head>
  <body id="page-top">
    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand font-weight-bold" href="#page-top">Online Notice Board</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/"><i class="fad fa-home mr-1"></i>Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about"><i class="fad fa-info-circle mr-1"></i>About</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/contact"><i class="fad fa-id-badge mr-1"></i>Contact <span class="sr-only">(current)</span></a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Begin page content -->
    <main role="main" class="container-fluid my-5" ng-app="feedbackApp">
      <h1 class="h2 text-center mb-3 p-3 shadow-lg border rounded-lg">Contact</h1>
      <div class="container col-md-8 rounded shadow mt-4 px-0 pt-3 pb-3 border ">
        <div class="col">
          <form class="" role="form" method="post" ng-controller="feedbackController">
            <div class="form-group">
              <input type="text" class="form-control" id="name" placeholder="NAME" name="name" ng-model="feedback.name">
            </div>
            <div class="form-group">
              <input type="email" class="form-control" id="email" placeholder="EMAIL" name="email" ng-model="feedback.email">
            </div>
            <textarea class="form-control" rows="5" placeholder="YOUR VALUABLE FEEDBACK" name="message"  ng-model="feedback.message"></textarea>
            <button class="btn btn-primary send-button text-center form-control mt-3" id="submit" type="submit" value="SEND" ng-click="postfeedback(feedback)">
              <div class="button">
                <i class="fa fa-paper-plane"></i><span class="send-text">SEND</span>
              </div>
            </button>
          </form>
        </div>
        <div class="col pt-3">
          <div class="w-100">
            <div class="list-group">
              <a href="tel:9666502388" title="Give me a call" class="list-group-item list-group-item-action"><i class="fad fa-phone fa-lg mr-2"></i>+91 9666502388</a>
              <a href="mailto:prasadmedisetti34@gmail.com" title="Send me an email" class="list-group-item list-group-item-action align-middle"><i class="fad fa-envelope fa-lg mr-2"></i>prasadmedisetti34@gmail.com</a>
            </div>
            <ul class="social-media-list my-2">
              <li onclick="window.open('#', '_self');"><a target="_blank"><i class="fab fa-github" aria-hidden="true"></i></a>
              </li>
              <li onclick="window.open('#', '_self');"><a href="" target="_blank" class="contact-icon">
                <i class="fab fa-whatsapp" aria-hidden="true"></i></a>
              </li>
              <li onclick="window.open('#', '_self');"><a href="" target="_blank" class="contact-icon">
                <i class="fab fa-instagram" aria-hidden="true"></i></a>
              </li>
              <li onclick="window.open('#', '_self');"><a href="" target="_blank" class="contact-icon">
                <i class="fab fa-linkedin" aria-hidden="true"></i></a>
              </li>
            </ul>
          </div>
        </div>
      </div>

    </main>

    <footer class="py-5 bg-dark">
      <div class="container text-center text-white">
        <p>Designed by <span class="myName">Prasad Medisetti</span></p>
        <p>Copyright <i class="fad fa-copyright"></i> 2020</p>
      </div>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>

    <script>
      var app = angular.module('feedbackApp', []);

      /* Controller for Admin changePassword */
      app.controller('feedbackController', function($scope, $http, $window) {

        $scope.postfeedback = function(change){
          
          $http({
              method : 'POST',
              url : '/postfeedback',
              data : $scope.feedback
          })
          .then(function success(response) {
            alert('Feedback Sent...');
            $scope.feedback = {};
          }, function error(response) {
            alert('Error Occured, Please try again...!');
            $scope.feedback = {};
            // console.log($scope.feedback)
          })

        }

      });
    </script>
  </body>
</html>
