<!-- Begin page content -->
<main role="main" class="container-fluid mt-5 pt-5 mb-n5 pb-n4" ng-app="myApp" ng-controller="myController">
  <div class="container col-md-11">
    <div class="card">
      <h2 class="card-header h3 text-center font-weight-bold">Notifications</h2>
      <div class="card-body p-2">
        <div class="table-responsive shadow-lg">
          <table class="table table-bordered table-hover mb-n1">
            <thead class="text-center">
              <tr>
                <th>#</th>
                <th>Subject</th>
                <th>Posted on</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody class="text-center" ng-repeat="notice in notices">
              <tr>
                <td>{{ $index + 1 }}</td>
                <td>{{ notice.subject }}</td>
                <td>{{ notice.postedOn }}</td>
                <td>
                  <!-- Button to Open the Modal -->
                  <a class="btn btn-light" data-toggle="modal" data-target="#myModal"><i class="far fa-info-circle"></i></a>
  
                  <!-- The Modal -->
                  <div class="modal fade" id="myModal">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                      <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                          <h1 class="modal-title" ng-bind="notice.title"></h1>
                          <button type="button" class="btn btn-outline-danger" class="close" data-dismiss="modal">Ã—</button>
                        </div>
                        
                        <!-- Modal body -->
                        <div class="modal-body text-justify">
                          <h3 ng-model="notice.subject"></h3>
                          <p class="lead" ng-bind="notice.description"></p>
                          <!-- <img src="/uploads/bg.jpg" class="img-responsive rounded w-100 h-100" alt=""> -->
                        </div>
                        
                        <!-- Modal footer -->
                        <div class="modal-footer">
                          <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="py-5 bg-dark">
  <div class="container text-center text-white">
    <p>Designed by <span class="myName">Prasad Medisetti</span></p>
    <p>Copyright <i class="fad fa-copyright"></i> 2020</p>
  </div>
</footer>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>

<script>
  var app = angular.module('myApp', []);
  app.controller('myController', ['$scope', '$http', function($scope, $http) {


    $http({
      method : 'GET',
      url : '/getnotices'
    }).then(function success(response) {
      // console.log(response.data);
      $scope.notices = response.data;
      console.log(response.data.sort())
    }, function error(response) {
      alert('Error Occured, Please try again...!');
    })

  }]);
</script>
